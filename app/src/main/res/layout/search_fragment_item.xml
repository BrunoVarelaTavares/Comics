<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relLayout1"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginBottom="20dp"
    android:minHeight="190dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ivComic"
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tvComicNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/ivComic"
        android:textColor="@color/gray_500"
        android:textStyle="bold|italic" />


    <TextView
        android:id="@+id/tvComicTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/tvComicNumber"
        android:layout_toEndOf="@id/ivComic"
        android:textColor="@color/black"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tvComicDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:maxHeight="120dp"
        android:layout_below="@id/tvComicTitle"
        android:layout_toEndOf="@id/ivComic"
        android:textColor="@color/gray_500"
        android:textStyle="italic" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/gray_500"
        android:layout_marginTop="15dp"
        android:layout_alignParentBottom="true" />


</RelativeLayout>